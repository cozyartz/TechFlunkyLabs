---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import NotFound3D from '../components/NotFound3D';
import CookieConsent from '../components/CookieConsent';
---

<Layout title="404 - Page Not Found | Tech Flunky Labs">
  <Header client:load />
  <main class="min-h-screen flex flex-col justify-center relative overflow-hidden">
    <!-- Background grid effect -->
    <div class="absolute inset-0 grid-pattern opacity-30" />

    <!-- Glitch scan line -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="scanline" />
    </div>

    <div class="relative z-10">
      <!-- 3D Scene -->
      <NotFound3D client:load />

      <!-- Content -->
      <div class="text-center px-6 -mt-8">
        <h1 class="text-2xl md:text-3xl font-bold text-white mb-4">
          <span class="text-[#e0ff00]">Oops!</span> Page Not Found
        </h1>
        <p class="text-surface-400 max-w-md mx-auto mb-8 text-lg">
          Looks like this page got lost in the digital void.
          The code you're looking for might have been moved, deleted, or never existed.
        </p>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/"
            class="group inline-flex items-center gap-2 px-6 py-3 bg-[#e0ff00] text-black font-semibold rounded-xl hover:bg-[#c8e600] transition-all duration-300 hover:scale-105"
          >
            <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Home
          </a>
          <a
            href="#contact"
            class="inline-flex items-center gap-2 px-6 py-3 text-surface-300 hover:text-white border border-surface-700 hover:border-[#e0ff00] font-semibold rounded-xl transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Get in Touch
          </a>
        </div>

        <!-- Fun suggestions -->
        <div class="mt-16 mb-8">
          <p class="text-surface-500 text-sm mb-4">While you're here, why not check out:</p>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="/#services" class="px-4 py-2 text-sm bg-surface-800/50 hover:bg-surface-800 text-surface-300 hover:text-[#e0ff00] rounded-lg transition-colors border border-surface-700">
              Our Services
            </a>
            <a href="/#work" class="px-4 py-2 text-sm bg-surface-800/50 hover:bg-surface-800 text-surface-300 hover:text-[#e0ff00] rounded-lg transition-colors border border-surface-700">
              Recent Projects
            </a>
            <a href="/#stack" class="px-4 py-2 text-sm bg-surface-800/50 hover:bg-surface-800 text-surface-300 hover:text-[#e0ff00] rounded-lg transition-colors border border-surface-700">
              Tech Stack
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-black to-transparent pointer-events-none" />
  </main>
  <Footer />
  <CookieConsent client:load />
</Layout>

<style>
  @keyframes scanline {
    0% { top: -100%; }
    100% { top: 100%; }
  }

  .scanline::after {
    content: '';
    position: absolute;
    top: -100%;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, transparent, #e0ff00, transparent);
    animation: scanline 4s linear infinite;
    pointer-events: none;
    opacity: 0.5;
  }
</style>
